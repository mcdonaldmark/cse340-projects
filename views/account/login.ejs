<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>
        <%= title %>
    </title>
    <link rel="stylesheet" href="/css/styles.css">
</head>

<body>
    <main class="login-wrapper">

        <h1 class="login-heading">
            <%= title %>
        </h1>

    <% if (messages && messages.length> 0) { %>
        <div class="notice">
            <% messages.forEach(function(msg) { %>
                <p>
                    <%= msg %>
                </p>
                <% }) %>
        </div>
        <% } %>

                    <% if (errors && errors.array().length> 0) { %>
                        <ul class="notice">
                            <% errors.array().forEach(error=> { %>
                                <li>
                                    <%= error.msg %>
                                </li>
                                <% }) %>
                        </ul>
                        <% } %>

                            <form id="loginForm" class="login-form" action="/account/login" method="post">

                                <label for="accountEmail" class="login-label">Email Address</label>
                                <input type="email" id="accountEmail" name="account_email" required
                                    placeholder="Enter a valid email address" value="<%= account_email %>"
                                    class="login-input">

                                <label for="accountPassword" class="login-label">Password</label>
                                <input type="password" id="accountPassword" name="account_password" required placeholder="Please enter an password."
                                    class="login-input">

                                <button type="submit" class="login-btn">Login</button>
                            </form>

                            <p class="register-link">
                                No account yet? <a href="/account/register">Register here</a>
                            </p>

    </main>
</body>

</html>