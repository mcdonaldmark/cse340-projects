<main class="inv-page">
    <h1 class="inv-heading">Add New Vehicle</h1>

    <% if (messages && messages.length> 0) { %>
        <div class="inv-flash">
            <%= messages %>
        </div>
        <% } %>

            <% if (errors && errors.length> 0) { %>
                <div class="inv-errors">
                    <% errors.forEach(err=> { %>
                        <p>
                            <%= err.msg %>
                        </p>
                        <% }) %>
                </div>
                <% } %>

                    <form class="inv-form" action="/inv/add-inventory" method="post">

                        <p><em>All Fields are Required</em></p>

                        <label class="inv-label">Classification:</label>
                        <div class="inv-select"><%- classificationList %></div>

                        <label class="inv-label" for="inv_make">Make:</label>
                        <input class="inv-input" type="text" name="inv_make" id="inv_make" placeholder="Min of 3 characters..." pattern="[A-Za-z]{3,}" required
                            value="<%= vehicle?.inv_make || '' %>">

                        <label class="inv-label" for="inv_model">Model:</label>
                        <input class="inv-input" type="text" name="inv_model" id="inv_model" placeholder="Min of 3 characters..." pattern="[A-Za-z]{3,}" required
                            value="<%= vehicle?.inv_model || '' %>">

                        <label class="inv-label" for="inv_year">Year:</label>
                        <input class="inv-input" type="text" name="inv_year" id="inv_year" placeholder="4-digit year" pattern="^\d{4}$" required
                            value="<%= vehicle?.inv_year || '' %>">

                        <label class="inv-label" for="inv_miles">Mileage:</label>
                        <input class="inv-input" type="text" name="inv_miles" id="inv_miles" placeholder="digits only" pattern="^\d+$" required
                            value="<%= vehicle?.inv_miles || '' %>">

                        <label class="inv-label" for="inv_description">Description:</label>
                        <textarea class="inv-textarea" name="inv_description" placeholder="Please enter description..."
                            id="inv_description"><%= vehicle?.inv_description || '' %></textarea>

                        <label class="inv-label" for="inv_image">Image Path:</label>
                        <input class="inv-input" type="text" name="inv_image" id="inv_image"
                            value="<%= vehicle?.inv_image || '/images/no-image.png' %>">

                        <label class="inv-label" for="inv_thumbnail">Thumbnail Path:</label>
                        <input class="inv-input" type="text" name="inv_thumbnail" id="inv_thumbnail"
                            value="<%= vehicle?.inv_thumbnail || '/images/no-image.png' %>">

                        <label class="inv-label" for="inv_price">Price:</label>
                        <input class="inv-input" type="text" name="inv_price" id="inv_price" step="0.01" placeholder="Decimal or Integer..." pattern="^\d+(\.\d+)?$" required
                            value="<%= vehicle?.inv_price || '' %>">

                        <label class="inv-label" for="inv_color">Color:</label>
                        <input class="inv-input" type="text" name="inv_color" id="inv_color" placeholder="Please enter color..." pattern="^[A-Za-z]+$" required
                            value="<%= vehicle?.inv_color || '' %>">

                        <button type="submit" class="inv-btn">Add Vehicle</button>
                    </form>
</main>